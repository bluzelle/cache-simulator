  "clients": [
    {
      "type": "fortnite_region",
      "weight": 10,
      "regions_x": 3,
      "regions_y": 3
    },
    {
      "type": "fortnite_session",
      "weight": 10,
      "regions_x": 3,
      "regions_y": 3,
      "clients_per_session": 50
    },
    {
      "type": "random",
      "weight": 20
    },
    {
      "type": "weather",
      "weight": 20
    }
  ]
}
